<% provide(:title, t('Edit post')) %>

<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group row">
    <%= f.label :title, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Title" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :short_content, "Short version", class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_area :short_content, class: 'form-control', placeholder: "Short Version" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :content, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= f.text_area :content, class: 'form-control', placeholder: "Content" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :image, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <div class="custom-file">
        <%= f.file_field :image, accept: 'image/jpeg,image/jpg,image/gif,image/png'%>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update post", class: 'btn btn-primary'%>
  </div>

<% end %>